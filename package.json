{
  "name": "jenkins-helper",
  "displayName": "Jenkins Helper",
  "description": "快捷触发 Jenkins 构建",
  "version": "0.0.2",
  "publisher": "TianJianJun0727",
  "license": "MIT",
  "repository": "https://github.com/TianJianJun0727/jenkins-helper.git",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "jenkins-helper.openPanel",
        "title": "打开Jenkins 构建助手"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "jenkins-helper.openPanel",
          "group": "navigation@100"
        }
      ],
      "editor/context": [
        {
          "command": "jenkins-helper.openPanel",
          "group": "navigation@100"
        }
      ],
      "editor/title": [
        {
          "command": "jenkins-helper.openPanel",
          "when": "workspaceFolderCount != 0",
          "group": "navigation@100"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build:webview && pnpm run compile",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build:webview": "cd webview-ui && pnpm install && pnpm run build",
    "package": "pnpm run vscode:prepublish && pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "test": "vscode-test",
    "lint": "eslint src",
    "build:vsce": "pnpm run vscode:prepublish && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.100.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "ovsx": "^0.10.8",
    "simple-git": "^3.30.0"
  }
}
